{
  "name": "build-the-typescript",
  "author": "Jay Whitewood <jakub.jay.olan@gmail.com>",
  "packageManager": "yarn@3.1.1",
  "version": "0.0.1",
  "main": "dist/ncc/index.js",
  "bin": "dist/tsc/index.js",
  "scripts": {
    "preinstall": "node scripts/preinstall.mjs",
    "build:tsc": "tsc -p tsconfig.json",
    "build:ncc": "ncc build src/index.ts -a -s -m -o dist/ncc --stats-out dist/ncc/stats.json",
    "build:esb": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=node16 --outfile=dist/esb/index.js",
    "build:pkg": "pkg . --compress Brotli -o dist/pkg/ttb -d --public-packages \"*\"",
    "build": "npm run build:tsc && npm run build:ncc && npm run build:esb && npm run build:pkg"
  },
  "pkg": {
    "scripts": [
      "dist/tsc/**/*.js"
    ],
    "assets": [
      "./node_modules/bcrypt/build/Release/**"
    ],
    "targets": [
      "node16-macos-x64",
      "node16-win-x64"
    ],
    "outputPath": "dist/pkg"
  },
  "devDependencies": {
    "@types/archiver": "^5",
    "@types/prettier": "^2",
    "@vercel/ncc": "^0.33.1",
    "archiver": "^5.3.0",
    "electron-builder": "^22.14.5",
    "esbuild": "^0.14.11",
    "execa": "^6.0.0",
    "ora": "^6.0.1",
    "pkg": "^5.5.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "fastify": "^3.25.3",
    "mongoose": "^6.1.5"
  }
}
