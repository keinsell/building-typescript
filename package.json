{
  "name": "typescript-to-binary",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jay Whitewood <jakub.jay.olan@gmail.com>",
  "license": "MIT",
  "bin": "dist/ncc/index.js",
  "scripts": {
    "build:tsc": "tsc -p tsconfig.json",
    "build:ncc": "yarn build:tsc && ncc build dist/tsc/index.js -a -s -m -o dist/ncc --stats-out dist/ncc/stats.json",
    "build:pkg": "yarn build:ncc && pkg . -d --compress Brotli -o dist/pkg/ttb --public-packages \"*\""
  },
  "pkg": {
    "scripts": "scripts/**/*.js",
    "assets": "assets/**/*",
    "targets": [
      "node14-macos-x64",
      "node14-win-x64"
    ],
    "outputPath": "dist/pkg"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@vercel/ncc": "^0.33.1",
    "pkg": "^5.5.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "fastify": "^3.25.3",
    "realm": "^10.11.0"
  }
}
